   "source": [
    "# 텍스트 출력(노트북 셀 출력)으로 가능한 최종 버전\n",
    "from wcwidth import wcswidth\n",
    "\n",
    "def ljust_vis(s: str, width: int) -> str:\n",
    "    pad = max(0, width - wcswidth(s))           # 표시 폭 기준으로 왼쪽 패딩\n",
    "    \n",
    "    return s + (\" \" * pad)\n",
    "\n",
    "pages_per_day = 5\n",
    "total_days = 20\n",
    "block_days = 5\n",
    "gap = 4\n",
    "num_width = 3\n",
    "\n",
    "for start_day in range(1, total_days + 1, block_days):\n",
    "    end_day = min(start_day + block_days - 1, total_days)\n",
    "\n",
    "    titles = [f\"<{day}일차 공부>\" for day in range(start_day, end_day + 1)]\n",
    "    cells = []\n",
    "    for p in range(1, pages_per_day + 1):\n",
    "        for day in range(start_day, end_day + 1):\n",
    "            page_number = (day - 1) * pages_per_day + p\n",
    "            cells.append(f\"{page_number:<{num_width}}페이지 공부하기.\")            # 숫자를 왼쪽 정렬로 만들어 '숫자 시작' 위치를 통일하기.\n",
    "    \n",
    "    col_width = max([wcswidth(t) for t in titles] + [wcswidth(c) for c in cells]) + 2       # 블록 단위로 필요한 폭을 자동으로 산출하기.\n",
    "\n",
    "    # 제목 행\n",
    "    for t in titles:\n",
    "        print(ljust_vis(t, col_width), end=\" \" * gap)\n",
    "    print()\n",
    "\n",
    "    # 내용 행\n",
    "    for p in range(1, pages_per_day + 1):\n",
    "        for day in range(start_day, end_day + 1):\n",
    "            page_number = (day - 1) * pages_per_day + p\n",
    "            cell = f\"{page_number:<{num_width}}페이지 공부하기.\"\n",
    "            print(ljust_vis(cell, col_width), end=\" \" * gap)\n",
    "        print()\n",
    "    print()"
   ]
  },
