   "source": [
    "from wcwidth import wcswidth\n",
    "\n",
    "def ljust_vis(s: str, width: int) -> str:\n",
    "    \"\"\"터미널 '표시 폭' 기준으로 왼쪽 패딩\"\"\"\n",
    "    pad = max(0, width - wcswidth(s))\n",
    "    return s + (\" \" * pad)\n",
    "\n",
    "pages_per_day = 5\n",
    "total_days = 20\n",
    "block_days = 5\n",
    "gap = 4\n",
    "num_width = 3\n",
    "\n",
    "cell_width = 22\n",
    "\n",
    "for start_day in range(1, total_days + 1, block_days):\n",
    "    end_day = min(start_day + block_days - 1, total_days)\n",
    "\n",
    "    for day in range(start_day, end_day + 1):\n",
    "        title = f\"<{day}일차 공부>\"\n",
    "        print(ljust_vis(title, cell_width), end=\" \" * gap)\n",
    "    print()\n",
    "\n",
    "    for p in range(1, pages_per_day + 1):\n",
    "        for day in range(start_day, end_day + 1):\n",
    "            page_number = (day - 1) * pages_per_day + p\n",
    "            cell = f\"{page_number:<{num_width}}페이지 공부하기.\"\n",
    "            print(ljust_vis(cell, cell_width), end=\" \" * gap)\n",
    "        print()\n",
    "    \n",
    "    print()"
   ]
  },
