    "# 콘솔대신 HTML 테이블(표 렌더러)로 출력하기.\n",
    "from IPython.display import HTML, display\n",
    "\n",
    "pages_per_day = 5\n",
    "total_days = 20\n",
    "block_days = 5\n",
    "\n",
    "html = []\n",
    "\n",
    "for start_day in range(1, total_days + 1, block_days):\n",
    "    end_day = min(start_day + block_days - 1, total_days)\n",
    "\n",
    "    html.append(\"<table style='border-collapse:collapse; margin-bottom:14px;'>\")\n",
    "    html.append(\"<tr>\")\n",
    "    for day in range(start_day, end_day + 1):\n",
    "        html.append(f\"<th style='border:1px solid #666; padding:6px 10px; text-align:left;'>\"f\"&lt;{day}일차 공부&gt;</th>\")\n",
    "    html.append(\"<tr>\")\n",
    "\n",
    "    for p in range(1, pages_per_day + 1):\n",
    "        html.append(\"<tr>\")\n",
    "        for day in range(start_day, end_day + 1):\n",
    "            page_number = (day - 1) * pages_per_day + p\n",
    "            html.append(f\"<td style='border:1px solid #666; padding:6px 10px; text-align:left;'>\"f\"{page_number}페이지 공부하기.</td>\")\n",
    "        html.append(\"</tr>\")\n",
    "    html.append(\"</table>\")\n",
    "\n",
    "display(HTML(\"\".join(html)))"
