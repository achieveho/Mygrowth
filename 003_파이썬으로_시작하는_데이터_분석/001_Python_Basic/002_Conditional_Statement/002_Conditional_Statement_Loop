    "# 바로 위 셀의 정렬이 아직도 좀 부족하다 느껴서, GPT한테 추가 개선 버전을 요청.\n",
    "pages_per_day = 5\n",
    "total_days = 20\n",
    "block_days = 5\n",
    "\n",
    "gap = 4                 # 열 사이 공백\n",
    "num_width = 3           # 페이지 번호 폭\n",
    "cell_width = 20         # 각 칸의 폭\n",
    "\n",
    "for start_day in range(1, total_days + 1, block_days):\n",
    "    end_day = min(start_day + block_days - 1, total_days)\n",
    "    \n",
    "    # 제목 행\n",
    "    for day in range(start_day, end_day + 1):\n",
    "        title = f\"<{day}일차 공부>\"\n",
    "        print(title.ljust(cell_width), end = \" \" * gap)\n",
    "    print()\n",
    "\n",
    "    # 페이지 행 (1 ~ 5쪽)\n",
    "    for p in range(1, pages_per_day + 1):\n",
    "        for day in range(start_day, end_day + 1):\n",
    "            page_number = (day - 1) * pages_per_day + p\n",
    "            cell = f\"{page_number:<{num_width}}페이지 공부하기.\"\n",
    "            print(cell.ljust(cell_width), end=\" \" * gap)            # 앞 공백을 없애기 위해 숫자를 왼쪽으로 정렬.\n",
    "        print()\n",
    "    \n",
    "    print()\n"
   ]
  },
